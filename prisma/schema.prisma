// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// siin hakkavad mudelid
model User {
  id        String   @id @default(cuid())
  email     String?  @unique
  role      Role     @default(CLIENT)
  createdAt DateTime @default(now())
  // ...
}

enum Role {
  ADMIN
  SOCIAL_WORKER
  CLIENT
}

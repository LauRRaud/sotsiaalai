{
  "name": "sotsiaalai",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "SotsiaalAI – kaasaegne AI-platvorm sotsiaalvaldkonna spetsialistidele ja abivajajatele.",
  "author": "SotsiaalAI OÜ",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start -p 3000",
    "serve": "cross-env NODE_ENV=production pm2 start npm --name \"sotsiaalai\" -- start",
    "analyze": "cross-env BUNDLE_ANALYZE=true next build",
    "analyze:dev": "cross-env BUNDLE_ANALYZE=true next dev --turbopack",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "check": "prisma generate && next lint",
    "prisma:generate": "prisma generate",
    "rag:sync-meta": "node scripts/sync-rag-meta.js",
    "prisma:migrate:deploy": "dotenv -e .env.production -- prisma migrate deploy",
    "migrate:prod": "dotenv -e .env.production -- prisma migrate deploy",
    "db:push:prod": "dotenv -e .env.production -- prisma db push",
    "prisma:studio:prod": "dotenv -e .env.production -- prisma studio",
    "postinstall": "prisma generate",
    "uuenda": "git add -A && git commit -m \"uuendus\" || echo \"(pole midagi commitida)\"; git push origin main"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.11.0",
    "@prisma/client": "6.16.2",
    "@react-three/fiber": "8.17.10",
    "bcrypt": "6.0.0",
    "gsap": "3.12.5",
    "motion": "^11.11.17",
    "next": "^16.0.0",
    "next-auth": "^5.0.0-beta.29",
    "next-intl": "^4.3.12",
    "ogl": "1.0.0",
    "openai": "4.104.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-parallax-tilt": "1.7.245",
    "sharp": "0.34.4",
    "styled-components": "6.1.11",
    "three": "0.160.1"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "15.5.3",
    "@types/node": "^24.5.2",
    "cross-env": "10.0.0",
    "dotenv-cli": "^7.4.2",
    "eslint": "9.9.0",
    "eslint-config-next": "15.5.3",
    "prettier": "3.3.3",
    "prisma": "6.16.2"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions",
    "last 2 Edge versions",
    "not ie <= 11"
  ],
  "engines": {
    "node": ">=18.18 <23"
  }
}
